{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "outDir": "lib",
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": [
      "es2017", "DOM"
    ],
    "baseUrl": "./src",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "resolveJsonModule": true
}
