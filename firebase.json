{
  "emulators": {
    "singleProjectMode": true,
    "auth": {
      "port": 9099,
      "host": "localhost"
    },
    "functions": {
      "port": 5002,
      "host": "localhost"
    },
    "firestore": {
      "port": 8080,
      "host": "localhost",
      "rules": "firebase/firestore/firestore.rules"
    },
    "pubsub": {
      "port": 8085,
      "host": "localhost"
    },
    "hub":{
      "host": "localhost",
      "port": 4400
    },
    "ui": {
      "enabled": true,
      "port": 11111,
      "host": "localhost"
    }
  },
  "firestore": {
    "rules": "firebase/firestore/firestore.rules",
    "indexes": "firebase/firestore/firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "firebase/functions"
  }
}
